        "@types/node": "^14.6.0",
        "@types/shelljs": "^0.8.8",
        "express": "^4.17.1",
        "fs-extra": "^9.0.1",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "serverless-express": "^2.0.11",
        "serverless-http": "^2.5.0",
        "serverless-offline": "^6.5.0",
        "shelljs": "^0.8.4",
        "ts-node": "^8.10.2",
        "tslint": "^6.1.3",
        "typescript": "^3.9.7"
